@using WallyApp.Models
@model GroupCreateViewModel

@{
    ViewBag.Title = "Create group";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    @using (Html.BeginForm("Create","Group", FormMethod.Post, new {@class="form-horizontal", role="form"}))
    {
        <h4>Stwórz nową grupę</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-dange" })
        <div class="form-group">
            @Html.LabelFor(group => group.groupName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(group => group.groupName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Utwórz grupę" />
            </div>
        </div>
    }
</div>
